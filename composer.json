{
  "name": "evoliz/evoliz-php",
  "description": "Evoliz PHP Library",
  "keywords": [
    "evoliz",
    "invoicing",
    "api"
  ],
  "homepage": "https://evoliz.com/",
  "license": "MIT",
  "authors": [
    {
      "name": "Evoliz and contributors",
      "homepage": "https://github.com/evoliz/evoliz-php/contributors"
    }
  ],
  "require": {
    "php": ">=8.3.0",
    "guzzlehttp/guzzle": "^7.5",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "Evoliz\\Client\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "fakerphp/faker": "^1.9",
    "mockery/mockery": "^1.3",
    "squizlabs/php_codesniffer": "^3.7",
    "rector/rector": "^2.0"
  },
  "scripts": {
    "tests": "phpunit",
    "code-sniffer" : "phpcs --standard=psr12 --exclude=Generic.Files.LineEndings --runtime-set ignore_warnings_on_exit 1 src/"
  }
}
